<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabOneActivity">

    <Button
        android:id="@+id/tab3_lockbtn"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tab1background"
        android:foreground="?attr/selectableItemBackground"
        android:padding="16dp"
        android:text="@string/tab3_name"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        android:transitionName="custom_transition"
        app:layout_constraintBottom_toTopOf="@+id/tab3_unlockbtn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/tab3_unlockbtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tab3_lockbtn" />
</androidx.constraintlayout.widget.ConstraintLayout>