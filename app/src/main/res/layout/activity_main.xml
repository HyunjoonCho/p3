<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabOneActivity">

    <Button
        android:id="@+id/main_tab1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tab1background"
        android:foreground="?attr/selectableItemBackground"
        android:padding="16dp"
        android:text="@string/tab1_name"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/main_tab2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:transitionName="custom_transition" />

    <Button
        android:id="@+id/main_tab2"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tab2background"
        android:foreground="?attr/selectableItemBackground"
        android:padding="16dp"
        android:text="@string/tab2_name"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toTopOf="@+id/main_tab3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_tab1"
        android:transitionName="custom_transition2" />

    <Button
        android:id="@+id/main_tab3"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@color/tab3background"
        android:foreground="?attr/selectableItemBackground"
        android:padding="16dp"
        android:text="@string/tab3_name"
        android:textColor="#FFFFFF"
        android:textSize="50sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_tab2" />
</androidx.constraintlayout.widget.ConstraintLayout>